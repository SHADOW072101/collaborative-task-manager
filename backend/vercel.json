{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "10mb",
        "includeFiles": [
          "prisma/**",
          "uploads/**",
          ".env"
        ],
        "excludeFiles": [
          "src/**/*.test.ts",
          "src/**/*.spec.ts",
          "src/lib/**",      
          "src/types/**"   
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}